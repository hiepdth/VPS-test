<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorEdgeEffect" tools:targetApi="lollipop">@color/start_color</item>

<!--        <item name="colorControlNormal">#c5c5c5</item>-->
        <item name="colorControlActivated">@color/start_color</item>  //black color
        <item name="colorControlHighlight">@color/start_color</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/start_color</item>
<!--        <item name="colorPrimary">@color/start_color</item>-->
        <!--        <item name="colorPrimaryDark">@color/end_color</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/open_sans_bold</item>
    </style>

    <style name="CustomTabText2" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/open_sans_bold</item>
    </style>

    <!--Text style-->
    <style name="TextAppearanceNormal">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TextAppearanceBold">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="TextAppearanceSemiBold">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="TextAppearanceMedium">
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/start_color</item>
        <item name="colorControlActivated">@color/start_color</item>
        <item name="colorControlHighlight">@color/start_color</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <!--Corner for bottom dialog-->
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_corner_bottom_sheet</item>
    </style>


    <!--Dialog-->
    <style name="DatePickerTheme">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="AlertDialogNoBG" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>

        <!--<item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>-->
        <!--  <item name="android:windowEnterAnimation">@anim/fadein</item>
          <item name="android:windowExitAnimation">@anim/fadeout</item>-->
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>